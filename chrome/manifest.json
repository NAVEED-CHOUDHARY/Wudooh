{
  "manifest_version": 2,
  "name": "Wudooh",
  "short_name": "Wudooh",
  "description": "Clarity for Arabic script text",
  "version": "1.1",
  "minimum_chrome_version": "38",
  "permissions": [
    "storage",
    "tabs",
    "chrome://favicon/"
  ],
  "browser_action": {
    "default_icon": "/assets/icon128c.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/icon16c.png",
    "48": "assets/icon48c.png",
    "128": "assets/icon128c.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "run_at": "document_end",
      "js": [
        "shared.js",
        "main.js"
      ],
      "css": [
        "fonts.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "shared.js",
      "background.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": [
    "main.js",
    "fonts/*"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'; img-src chrome://favicon;"
}
