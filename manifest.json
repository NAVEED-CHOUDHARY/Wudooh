{
  "manifest_version": 2,
  "name": "Wudooh",
  "short_name": "Wudooh",
  "description": "Clarity for Arabic script",
  "version": "1.0",
  "minimum_chrome_version": "38",
  "permissions": [
    "storage"
  ],
  "options_page": "popup.html",
  "browser_action": {
    "default_icon": "/assets/icon128c.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "assets/icon128c.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "main.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "main.js",
    "fonts/*"
  ]
}
